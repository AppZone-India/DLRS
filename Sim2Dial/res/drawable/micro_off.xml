<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
     <layer-list >
    	    <item>
    	        <shape>
				   <gradient 
				       android:startColor="#aaaaaa"
				       android:endColor="#ffffff"
				       android:angle="90"/>
				</shape>
			 </item>
    	 <item android:drawable="@drawable/micro_off_default"/>
    </layer-list>   
    </item>
    <item android:state_enabled="false">
    <layer-list >
    	    <item>
    	        <shape>
				   <gradient 
				       android:startColor="#aaaaaa"
				       android:endColor="#ffffff"
				       android:angle="90"/>
				</shape>
			 </item>
    	 <item android:drawable="@drawable/micro_off_default"/>
    </layer-list>   
    </item>
    
    <item>
    	<layer-list >
    	    <item>
    	        <shape>
				   <gradient 
				       android:startColor="#dddddd"
				       android:endColor="#ffffff"
				       android:angle="90"/>
				</shape>
			 </item>
    	 <item android:drawable="@drawable/micro_off_default"/>   
    	</layer-list>
    </item>
</selector>

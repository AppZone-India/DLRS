<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.linphone"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <TableLayout
            android:id="@+id/calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="20dp" />

        <fragment
            android:id="@+id/status"
            android:name="com.mobisnow.mobisip.StatusFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/status" />
    </FrameLayout>

    <ImageView
        android:id="@+id/switchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_switch_camera"
        android:src="@drawable/switch_camera"
        android:visibility="invisible" />

    <com.mobisnow.mobisip.ui.Numpad
        android:id="@+id/numpad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/switchCamera"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/dialer_alt_background"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/options_transfer"
            android:gravity="center"
            android:paddingTop="40dp"
            android:text="@string/button_transfer"
            android:textColor="@drawable/text_incall_button_color"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/pause1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_pause"
            android:scaleType="fitXY"
            android:src="@drawable/pause_off"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dialer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_numpad"
            android:scaleType="fitXY"
            android:src="@drawable/dialer_alt"
            android:visibility="gone" />

        <TextView
            android:id="@+id/addCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/options_add_call_alt"
            android:gravity="center"
            android:paddingTop="40dp"
            android:text="@string/button_add_call"
            android:textColor="@drawable/text_incall_button_color"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_dialer"
                android:scaleType="fitCenter"
                android:src="@drawable/pause_off" />

            <ImageView
                android:id="@+id/micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_dialer"
                android:scaleType="fitCenter"
                android:src="@drawable/micro_on" />

            <ImageView
                android:id="@+id/speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_dialer"
                android:scaleType="fitCenter"
                android:src="@drawable/speaker_off" />

            <ImageView
                android:id="@+id/dialer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_dialer"
                android:scaleType="fitCenter"
                android:src="@drawable/dialer_alt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_conference"
                android:scaleType="fitXY"
                android:src="@drawable/conference"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hangUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.97"
                android:adjustViewBounds="true"
                android:background="@drawable/red_selected"
                android:contentDescription="@string/content_description_hang_up"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="Hang Up"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
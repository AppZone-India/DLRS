<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  	android:background="@drawable/keypad_bg"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35" >
	    
	    <com.mobisnow.mobisip.ui.AddressText
	        android:id="@+id/Adress"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:layout_weight="0.8"
	        android:background="@drawable/keypad_bg"
	        android:hint="@string/addressHint"
	        android:focusableInTouchMode="false"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp"
	        android:textColor="@android:color/black" />
	    
	    
        <com.mobisnow.mobisip.ui.EraseButton
            android:id="@+id/Erase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:scaleType="fitXY"
            android:src="@drawable/backspace" />
		
	</LinearLayout>
	
    <com.mobisnow.mobisip.ui.Numpad 
	    android:id="@+id/Dialer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.15" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35" >
        
        <ImageView
            android:contentDescription="@string/content_description_add_contact"
            android:id="@+id/addContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:scaleType="fitXY"
            android:src="@drawable/add_contact"
            android:visibility="gone" />
        
         <com.mobisnow.mobisip.ui.CallButton
            android:id="@+id/Call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/callpress"
            android:layout_weight="0.5"
            android:scaleType="fitStart"
            android:src="@drawable/voip_button" />
        
         <com.mobisnow.mobisip.ui.CallBackButton
            android:id="@+id/CallBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:scaleType="fitStart"
            android:background="@drawable/callpress"
            android:focusableInTouchMode="false"
            android:src="@drawable/access_buttons"/>
        
    </LinearLayout>
	
</LinearLayout>

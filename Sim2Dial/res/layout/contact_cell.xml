<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff"
   
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="25dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@color/co_callback_nor"
        android:text="#" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:padding="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.sim2dial.dialer.util.ImageViewRounded
            android:id="@+id/img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:src="@drawable/ic_contact_picture_180_holo_light" />

        <RelativeLayout
            android:id="@+id/condisp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="5dp"
                android:text="##"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="10dp"
                android:text="##"
                android:textColor="#000000"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@drawable/fev_inv" />
        </RelativeLayout>
        <!--
    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:background="#ff003161" >
    </LinearLayout>
        -->

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.3" >

            <ImageButton
                android:id="@+id/imb"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:src="@drawable/btn_call_selec" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
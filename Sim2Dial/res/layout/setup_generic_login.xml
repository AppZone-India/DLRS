<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp" >

    <Button
        android:id="@+id/signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sltr_login"
        android:gravity="center"
        android:padding="8dp"
        android:text="Need Account? Create New"
        android:textColor="@color/co_login_btn"
        android:textSize="@dimen/large_text" />

    <RelativeLayout
        android:id="@+id/pan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/policy"
        android:background="@color/co_header_bg" >

        <include
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            layout="@layout/loginpan" />
    </RelativeLayout>

    <TextView
        android:id="@+id/policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/login_msg"
        android:textColor="@color/co_policy"
        android:textSize="@dimen/normal_text" />

</RelativeLayout>
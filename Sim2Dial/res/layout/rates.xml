<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="#00000000"
    >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dip" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblsel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Sell"
                android:textColor="@color/f_login_pan_text"
                android:typeface="serif" />
            

            <TextView
                android:id="@+id/sel"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                 android:textStyle="bold"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/f_login_pan_text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbldes"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                 android:textStyle="bold"
                android:layout_weight="1"
                android:text="Destination"
               android:textColor="@color/f_login_pan_text"
                android:typeface="serif" />

            <TextView
                android:id="@+id/des"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                 android:textStyle="bold"
                android:layout_weight="1"
                android:text="TextView"
            android:textColor="@color/f_login_pan_text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbldilpre"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                 android:textStyle="bold"
                android:text="Dialprefix"
                android:textColor="@color/f_login_pan_text"
                android:typeface="serif" />

            <TextView
                android:id="@+id/dilpre"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                 android:textStyle="bold"
                android:text="TextView"
                 android:textColor="@color/f_login_pan_text"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblcur"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                 android:textStyle="bold"
                android:layout_weight="1"
                android:text="Currency"
                android:textColor="@color/f_login_pan_text"
                android:typeface="serif" />

            <TextView
                android:id="@+id/cur"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/f_login_pan_text" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/rateback"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
      
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
<!--   android:background="@drawable/btn_dialvoip_action"  -->
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="direction">
        <enum name="rightToLeft" value="0" />
        <enum name="bottomToTop" value="1" />
        <enum name="leftToRight" value="2" />
        <enum name="topToBottom" value="3" />
    </attr>
    
    <declare-styleable name="SlidingDrawer">
        <attr name="handle" format="reference" />
        <attr name="content" format="reference" />
        <attr name="direction" />
    </declare-styleable>
    
    <declare-styleable name="AvatarWithShadow">
        <attr name="picture" format="reference" />
    </declare-styleable>
    <declare-styleable name="CircularImage">
        <attr name="enable_border" format="boolean" />
        <attr name="enable_number" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="numberRadius" format="dimension" />
        <attr name="numberSize" format="dimension" />
        <attr name="numberText" format="string" />
        <attr name="numberColor" format="color" />
        <attr name="numberBackgroundColor" format="color" />
        <attr name="borderColor" format="color" />
    </declare-styleable>
</resources>
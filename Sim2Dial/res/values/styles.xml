<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">@color/co_header_bg</item>
        <item name="android:bottomDark">@color/co_header_bg</item>
        <item name="android:bottomMedium">@color/co_header_bg</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
        <item name="android:fullBright">@color/co_header_bg</item>
        <item name="android:fullDark">@color/co_header_bg</item>
        <item name="android:topBright">@color/co_header_bg</item>
        <item name="android:topDark">@color/co_header_bg</item>
    </style>

    <style name="MyBackground" parent="@android:style/Theme.Dialog">
        <item name="@android:windowBackground">@color/co_header_bg</item>
        <item name="android:background">@color/co_header_bg</item>
    </style>

    <style name="MyTheme">
        <item name="android:windowTitleBackgroundStyle">@style/MyBackground</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Light"></style>

    <style name="Header" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/login_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/co_header_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="Default" parent="android:Theme" />

    <style name="NoTitle" parent="android:Theme.NoTitleBar">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FullScreen" parent="android:Theme.NoTitleBar.Fullscreen" />

    <style name="PreferencesTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg_in_call_gradient_connected</item>
    </style>

    <style name="Acc_Setting" parent="android:Theme.NoTitleBar">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Animations" />

    <!-- PopDownMenu -->
    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <!-- PopUpMenu -->
    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Left">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

</resources>